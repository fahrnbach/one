{
  "name": "bezel",
  "projectType": "application",
  "sourceRoot": "apps/core/api/bezel",
  "targets": {
    "build": {
      "executor": "@nx/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/core/api/bezel",
        "main": "apps/core/api/bezel/src/main.ts",
        "tsConfig": "apps/core/api/bezel/tsconfig.app.json"
      }
    },
    "serve": {
      "executor": "@nx/node:execute",
      "options": {
        "buildTarget": "components:bezel:build"
      }
    }
  },
  "tags": ["type:ui", "scope:components"]
}
